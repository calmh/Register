<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', clubs_path %></li>
      <li><%= link_to 'New', new_club_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Clubs</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Name</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @clubs.each do |club| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= club.id %>
          </td>
										<td>
						<%= link_to club.name, club_path(club) %>
					</td>
										<td>
            <%= club.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', club_path(club) %> |
            <%= link_to 'edit', edit_club_path(club) %> |
            <%= link_to 'destroy', club_path(club), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>