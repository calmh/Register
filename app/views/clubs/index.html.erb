<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', clubs_path %></li>
      <li><%= link_to 'New', new_club_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Clubs</h2>
    <div class="inner">
      <table class="table">
        <tr>             
	<th class="first"><%=t :Name%></th>
	<th class="last"><%=t :Num_students%></th>
        </tr>
        <% @clubs.each do |club| -%>
        <tr class="<%= cycle("odd", "even") %>">
	<td>
	<%= link_to club.name, club_path(club) %>
	</td>
          <td class="last">
            <%= num_students(club) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
