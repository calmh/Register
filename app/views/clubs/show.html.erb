<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', clubs_path  %></li>
      <li><%= link_to 'New', new_club_path %></li>
      <li class="active"><%= link_to 'Show', club_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Name:</b>
          <%= @club.name %>
        </p>
      <%= link_to 'Edit', edit_club_path(@club) %>

 <h2><%=t(:Students)%></h2>
      <table class="table">
        <tr>             
          <th class="first"><%=t :ID%></th>
	<th><%=t :Name%></th>
          <th class="last"><%=t :Grade%></th>
        </tr>
        <% @club.students.each do |student| -%>
        <tr class="<%= cycle("odd", "even") %>">
	<td>
	<%= link_to student.id, student_path(student) %>
	</td>
          <td>
            <%= student.fname %>
            <%= student.sname %>
          </td>
          <td class="last">
            <%= student.grade %>
          </td>
        </tr>          
        <% end -%>
      </table>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

