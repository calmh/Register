<div class="block">
  <div class="content">
    <div class="inner">
<h2><%=t:Log_in%></h2>
 
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.label :login, t(:Login) %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password, t(:Password) %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label t(:Remember_me) %><br />
  <br />
  <%= f.submit t(:Log_in) %>
<% end %>
</div>
</div>
</div>

