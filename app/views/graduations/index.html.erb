<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:Club_List), clubs_path  %></li>
      <li><%= link_to @club.name, club_path(@club) %></li>
      <li><%= link_to @student.name, student_path(@student) %></li>
      <li><%= link_to t(:Edit), edit_student_path(@student) %></li>
      <li class="active"><%= link_to t(:Graduations), student_graduations_path(@student) %></li>
      <li><%= link_to t(:Payments), student_payments_path(@student) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title"><%=t:Graduations%></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%=t:Graduated%></th>
          <th><%=t:Grade%></th>
          <th><%=t:Instructor%></th>
          <th class="last"><%=t:Examiner%></th>
        </tr>
        <% @graduations.each do |graduation| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%=h graduation.graduated.to_date%></td>
          <td><%=h grade_name graduation.grade%></td>
          <td><%=h graduation.instructor%></td>
          <td><%=h graduation.examiner%></td>
        </tr>
        <% end -%>
      </table>
    </div>
    <h2 class="title"><%=t:Register_Graduation%></h2>
    <div class="inner">
      <% @graduation = Graduation.new -%>
      <% @graduation.student = @student -%>
      <% form_for [ @student, @graduation ], :html => { :class => :form } do |f| -%>
      <%= render :partial => "form", :locals => {:f => f} -%>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
