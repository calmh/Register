<div class="block">
	<div class="secondary-navigation">
		<ul>
			<%= render :partial => 'application/links' %>
			<li class="active"><%= link_to @student.name, student_graduations_path(@student) %></li>
		</ul>
		<div class="clear"></div>
	</div>
	<div class="content">
		<h2 class="title"><%=t:Graduations%></h2>
		<div class="inner">
			<table class="table">
				<tr>
					<th class="first"><%=t:Graduated%></th>
					<th><%=t:Grade%></th>
					<th><%=t:Instructor%></th>
					<th class="last"><%=t:Examiner%></th>
				</tr>
				<% @graduations.each do |graduation| -%>
				<tr class="<%= cycle("odd", "even") %>">
					<td><%=h graduation.graduated.to_date%></td>
					<td><%=h grade_str(graduation)%></td>
					<td><%=h graduation.instructor%></td>
					<td><%=h graduation.examiner%></td>
				</tr>
				<% end -%>
			</table>
		</div>
		<h2 class="title"><%=t:Register_Graduation%></h2>
		<div class="inner">
			<% form_for [ @student, @graduation ], :html => { :class => :form } do |f| -%>
			<%= render :partial => "form", :locals => {:f => f} -%>
			<% end -%>
		</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => 'students/sidebar') -%>
