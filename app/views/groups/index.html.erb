<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first last active"><%= link_to t(:Groups), groups_path %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title"><%=t:Groups%></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%=t:Name%></th>
          <th><%=t:Description%></th>
          <th><%=t:Default%></th>
          <th class="last"><%=t:Num_Students%></th>
        </tr>
        <% @groups.each do |group| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= link_to group.identifier, edit_group_path(group) %></td>
          <td><%= group.comments %></td>
          <td><%= group.default? ? t(:P_yes) : t(:P_no) %></td>
          <td class="last">
            <%= group.students.length %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>

        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
