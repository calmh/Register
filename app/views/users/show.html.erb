<div class="block">
	<div class="secondary-navigation">
		<ul>
			<%= render :partial => 'application/links' %>
			<li class="active"><%= link_to t(:Profile), user_path(@user) %></li>
		</ul>
		<div class="clear"></div>
	</div>
	<div class="content">
		<div class="inner">

			<p>
				<b><%=t:Login%>:</b>
				<%= @user.login %>
			</p>

			<p>
				<b><%=t:Name%>:</b>
				<%= @user.fname %>
				<%= @user.sname %>
			</p>

			<p>
				<b><%=t:Email%>:</b>
				<%= @user.email %>
			</p>

			<p>
				<b><%=t:Logged_in_since%>:</b>
				<%= @user.current_login_at %>
			</p>

			<p>
				<b><%=t:Logged_in_from%>:</b>
				<%= @user.current_login_ip %>
			</p>

			<p>
				<b><%=t:Previous_login%>:</b>
				<%= @user.last_login_at %>
			</p>

			<p>
				<b><%=t:Previous_login_from%>:</b>
				<%= @user.last_login_ip %>
			</p>

			<p>
				<b><%=t:Num_logins%>:</b>
				<%= @user.login_count %>
			</p>

			<% permission = @user.clubs_permission? ? t(:Allowed_to) : t(:Not_allowed_to) %>
			<p>
				<b><%= permission %> <%=t(:Edit_clubs).downcase%></b>
			</p>

			<% permission = @user.groups_permission? ? t(:Allowed_to) : t(:Not_allowed_to) %>
			<p>
				<b><%= permission %> <%=t(:Edit_groups).downcase%></b>
			</p>

			<% permission = @user.users_permission? ? t(:Allowed_to) : t(:Not_allowed_to) %>
			<p>
				<b><%= permission %> <%=t(:Edit_users).downcase%></b>
			</p>

			<% permission = @user.mailinglists_permission? ? t(:Allowed_to) : t(:Not_allowed_to) %>
			<p>
				<b><%= permission %> <%=t(:Edit_mailinglists).downcase%></b>
			</p>

			<% clubs.each do |club| %>
			<%= club.name %> <%= current_user.graduations_permission?(club)%>
			<br/>
			<% end %>
		</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
