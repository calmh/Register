<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:Club_List), clubs_path %></li>
      <li class="active"><%= link_to t(:Profile), user_path(@user) %></li>
      <li><%= link_to t(:Edit), edit_user_path(@user) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%=t:Login%>:</b>
          <%= @user.login %>
        </p>

        <p>
          <b><%=t:Name%>:</b>
          <%= @user.fname %>
          <%= @user.sname %>
        </p>

        <p>
          <b><%=t:Email%>:</b>
          <%= @user.email %>
        </p>

        <p>
          <b><%=t:Logged_in_since%>:</b>
          <%= @user.current_login_at %>
        </p>

        <p>
          <b><%=t:Logged_in_from%>:</b>
          <%= @user.current_login_ip %>
        </p>

        <p>
          <b><%=t:Previous_login%>:</b>
          <%= @user.last_login_at %>
        </p>

        <p>
          <b><%=t:Previous_login_from%>:</b>
          <%= @user.last_login_ip %>
        </p>

        <p>
          <b><%=t:Num_logins%>:</b>
          <%= @user.login_count %>
        </p>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
