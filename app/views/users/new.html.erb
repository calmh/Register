<div class="block">
  <div class="secondary-navigation">
    <ul>
      <%= render :partial => 'application/links' %>
      <li class="active"><%= link_to t(:New), new_user_path %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">New User</h2>
    <div class="inner">
      <% form_for :user, :url => users_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
