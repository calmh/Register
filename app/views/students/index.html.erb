<div class="block">
  <div class="secondary-navigation">
    <ul>
      <%= render :partial => 'application/links' %>
      <li class="active"><%= link_to @club.name, club_path(@club) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <div class="inner">
      <h2><%=t(:Students)%></h2>
      <% form_tag '/students/bulkoperations', :class => "form", :method => "post" do %>
      <table class="table">
        <tr>
          <th class="first">&nbsp;</th>
          <th><%=t(:Group)%></th>
          <th><%=t(:Name)%>
          <th><%=t(:Personal_no)%>
          <th><%=t(:Grade)%></th>
          <th class="last"><%=t(:Latest_payment)%>
        </tr>
        <% @club.students.each do |student| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= check_box_tag "selected_students[]", student.id %></td>
          <td>
            <% if student.group.blank? -%>
            None?!
            <% else -%>
            <%= student.group.identifier %>
            <% end -%>
          </td>
          <td><%= link_to student.name, student_path(student) %></td>
          <td><%= student.formatted_personal_number %></td>
          <td><%= grade_name(student.current_grade.grade) %></td>
          <td class="student-<%= student.active? ? 'active' :
          'inactive' %>"><%=h student.latest_payment.description %></td>
        </tr>
        <% end -%>
      </table>
      <div class="group navform">
        <p><%= t(:Acts_on_selected) %></p>
        <%= submit_tag t(:Send_Message) + " &rarr;", :name => "bulk_message", :class => "button" %>
        <%= submit_tag t(:Register_Graduation) + " &rarr;", :name => "bulk_graduations", :class => "button" %>
        <%= submit_tag t(:Register_Payment) + " &rarr;", :name => "bulk_payments", :class => "button" %>
      </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'clubs/sidebar') -%>
