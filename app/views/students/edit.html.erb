<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:Club_List), clubs_path  %></li>
      <% if new_club_permission? %>
      <li><%= link_to t(:New_Club), new_club_path %></li>
      <% end %>
      <li><%= link_to @club.name, club_path(@club) %></li>
      <li><%= link_to @student.name, student_path %></li>
      <li class="active"><%= link_to t(:Edit), edit_student_path(@student) %></li>
      <li><%= link_to t(:Graduations), student_graduations_path(@student) %></li>
      <li><%= link_to t(:Payments), student_payments_path(@student) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%=t:Edit_Student%></h2>
    <div class="inner">
      <% form_for @student, :url => student_path(@student), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
