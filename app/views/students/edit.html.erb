<div class="block">
	<div class="secondary-navigation">
		<ul>
			<% if current_user.type == 'Administrator' -%>
			<%= render :partial => 'application/links' %>
			<li><%= link_to @club.name, club_students_path(@club) %></li>
			<% end -%>
			<li class="active"><%= link_to h(@student.name), edit_student_path(@student) %></li>
		</ul>
		<div class="clear"></div>
	</div>
	<div class="content">
		<h2 class="title"><%=t:Edit_Student%></h2>
		<div class="inner">
			<% form_for @student, :url => student_path(@student), :html => { :class => :form } do |f| -%>
			<% if current_user.type == 'Administrator' -%>
			<%= render :partial => "form", :locals => {:f => f} %>
			<% elsif current_user.type == 'Student' && @student == current_user -%>
			<%= render :partial => "self_form", :locals => {:f => f} %>
			<% end -%>
			<% end -%>
		</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
