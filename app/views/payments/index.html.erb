<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:Club_List), clubs_path  %></li>
      <li><%= link_to @club.name, club_path(@club) %></li>
       <li class="active"><%= link_to h(@student.name), student_payments_path(@student) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title"><%=t:Payments%></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%=t:Received%></th>
        <th><%=t:Amount%></th>
        <th class="last"><%=t:Description%></th>
        </tr>
        <% @payments.each do |payment| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%=payment.received.to_date%></td>
          <td><%=payment.amount%></td>
          <td><%=payment.description%></td>
        </tr>
        <% end -%>
      </table>
    </div>
    <h2 class="title"><%=t:Register_Payment%></h2>
    <div class="inner">
      <% @payment = Payment.new -%>
      <% @payment.student = @student -%>
      <% form_for [ @student, @payment ], :html => { :class => :form } do |f| -%>
      <%= render :partial => "form", :locals => {:f => f} -%>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'students/sidebar') -%>
