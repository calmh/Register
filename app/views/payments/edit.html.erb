<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', payments_path  %></li>
      <li><%= link_to 'New', new_payment_path %></li>
      <li class="active"><%= link_to 'Edit', edit_payment_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Payment</h2>
    <div class="inner">
      <% form_for @payment, :url => payment_path(@payment), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>