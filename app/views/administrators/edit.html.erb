<div class="block">
	<div class="secondary-navigation">
		<ul>
			<% if current_user.users_permission? %>
			<li class="first"><%= link_to t(:Users), administrators_path %></li>
			<% end %>
			<li><%= link_to t(:Profile), administrator_path(@admin) %></li>
			<li class="active last"><%= link_to t(:Edit_User), edit_administrator_path(@admin) %></li>
		</ul>
		<div class="clear"></div>
	</div>
	<div class="content">
		<h2 class="title"><%=t(:Edit_User)%></h2>
		<div class="inner">
			<% form_for @admin, :url => administrator_path(@admin), :html => { :class => :form } do |f| -%>
			<%= render :partial => "form", :locals => {:f => f} %>
			<% end -%>
		</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
